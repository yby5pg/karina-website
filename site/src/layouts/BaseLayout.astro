---
import "../styles/global.css";
import Nav from "../components/Nav.astro";
import Footer from "../components/Footer.astro";

const { title = "Karina Yakubisin", description = "Theatre portfolio" } = Astro.props;
---
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="description" content={description} />
    <title>{title}</title>
  </head>

  <body class="page">
    <div class="container">
      <Nav />
      <main class="py-12">
        <slot />
      </main>
      <Footer />
    </div>
  </body>
</html>
