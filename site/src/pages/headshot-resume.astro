---
import BaseLayout from "../layouts/BaseLayout.astro";
---
<BaseLayout title="Headshot + Resume â€” Karina Yakubisin">
  <h1 class="text-3xl font-semibold tracking-tight">Headshot + Resume</h1>

  <section class="mt-10 grid gap-8 md:grid-cols-2">
    <div class="panel-soft overflow-hidden">
      <img
        src="/images/headshots/main.jpg"
        alt="Headshot of Karina Yakubisin"
        class="h-full w-full object-cover"
        loading="eager"
      />
    </div>

    <div class="panel p-6">
      <h2 class="text-lg font-semibold">Resume</h2>
      <p class="mt-2 text-sm muted">PDF download + embedded view.</p>

      <div class="mt-5">
        <a href="/resume.pdf" class="btn-primary" download>Download Resume (PDF)</a>
      </div>

      <div class="mt-6 overflow-hidden rounded-2xl border" style="border-color: rgb(var(--border)); background: rgb(var(--bg));">
        <iframe src="/resume.pdf" class="h-[560px] w-full" title="Resume PDF"></iframe>
      </div>
    </div>
  </section>
</BaseLayout>
