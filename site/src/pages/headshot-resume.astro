---
import BaseLayout from "../layouts/BaseLayout.astro";
---
<BaseLayout title="Headshot + Resume â€” Karina Yakubisin">
<section class="mt-8 flex justify-center">
  <div class="space-y-6">
    <!-- Heading aligned with media block -->
    <h1 class="text-2xl font-semibold tracking-tight">
      Headshot + Resume
    </h1>

    <!-- Media row -->
    <div class="grid gap-6 sm:grid-cols-2">
      <!-- Headshot -->
      <a
        href="/downloads/karina-yakubisin-headshot.jpg"
        download
        class="group justify-self-center"
      >
        <div class="media-frame w-full max-w-[260px]">
          <img
            src="/images/headshots/main.jpg"
            alt="Headshot of Karina Yakubisin"
            class="w-full aspect-[4/5] object-cover"
            loading="eager"
          />

          <!-- hover overlay -->
          <div class="absolute inset-0 flex items-center justify-center opacity-0 group-hover:opacity-100 transition-opacity">
            <div class="absolute inset-0 bg-black/20"></div>
            <span class="relative btn">Download</span>
          </div>
        </div>
      </a>

      <!-- Resume -->
      <a
        href="/downloads/karina-yakubisin-resume.pdf"
        download
        class="group justify-self-center"
      >
        <div class="media-frame w-full max-w-[260px]">
          <img
            src="/images/resume.png"
            alt="Resume"
            class="w-full aspect-[8.5/11] object-contain bg-white"
          />

          <!-- hover overlay -->
          <div class="absolute inset-0 flex items-center justify-center opacity-0 group-hover:opacity-100 transition-opacity">
            <div class="absolute inset-0 bg-black/20"></div>
            <span class="relative btn">Download</span>
          </div>
        </div>
      </a>
    </div>
  </div>
</section>

</BaseLayout>
