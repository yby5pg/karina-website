---
import BaseLayout from "../layouts/BaseLayout.astro";

const reels = [
  {
    title: "Dance Reel",
    youtubeId: "TBefhc7_1pI",
  },
  {
    title: "Musical Theatre Reel",
    youtubeId: "yQz6Wmb4L60",
  },
  {
    title: "Morning Person Audition Cut",
    youtubeId: "FPhmRa7JqmY",
  },
];
---

<BaseLayout title="Reels â€” Karina Yakubisin">
  <section class="mt-8">
    <h1 class="text-2xl font-semibold tracking-tight">Reels</h1>

    <div class="mt-6 grid gap-6 sm:grid-cols-2 lg:grid-cols-3">
      {reels.map((r) => (
        <div class="space-y-2">
          <div class="media-frame">
            <iframe
              class="w-full aspect-video"
              src={`https://www.youtube.com/embed/${r.youtubeId}?rel=0`}
              title={r.title}
              frameborder="0"
              allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
              allowfullscreen
            ></iframe>
          </div>
          <p class="text-sm font-semibold">{r.title}</p>
        </div>
      ))}
    </div>
  </section>
</BaseLayout>
